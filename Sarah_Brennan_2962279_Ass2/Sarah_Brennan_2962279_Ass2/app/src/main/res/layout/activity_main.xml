<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appIDTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:text="@string/app_title"
        android:textColor="@color/midnight_green"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/minesMarkedTV"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="@string/numMinesMarked"
            android:textColor="@color/midnight_green"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/minesRemainingTV"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/numMinesLeft"
            android:textColor="@color/midnight_green"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/reset"
            android:textColor="@color/midnight_green"
            app:backgroundTint="@color/melon" />

        <Button
            android:id="@+id/flagToggleButton"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="110dp"
            android:layout_marginBottom="10dp"
            android:text="@string/flag"
            android:textColor="@color/midnight_green"
            app:backgroundTint="@color/melon" />

    </LinearLayout>

    <com.example.sarah_brennan_2962279_ass2.CustomView
        android:id="@+id/minesweeper_custom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:gravity="center"
            android:text="@string/timeTaken"
            android:textColor="@color/midnight_green"
            android:textSize="20sp" />

        <Chronometer
            android:id="@+id/cmTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/midnight_green"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>